type User {
    username: String! @unique
    name: String!
    email: String! @unique
    password: String!
    group: String!
}

type Group {
    name: String! @unique
    access: String!
}

type Menu {
    name: String! @unique
    parent_name: String!
    sequence: Int!
}

type Work {
    name: String! @unique
    p: String!
    author_name: String!
    simple_caption: String!
    img_url: String!
    client: String!
    website: String!
    completed_at: String!
    long_desc: String!
    interisting_count: Int!
    social_links: String!
}

type Post {
    title: String! @unique
    p: String!
    author_name: String!
    img_url: String!
    text_content: String!
    published_at: String!
    view_count: Int!
    interisting_count: Int!
    social_links: String!
}

type Comment {
    id: ID! @unique
    parent_id: ID
    post_title: String!
    user_username: String!
    text_content: String!
}